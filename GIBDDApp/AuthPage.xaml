<Page x:Class="GIBDDApp.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GIBDDApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Username: " Width="175" TextAlignment="Center" FontSize="22"></TextBlock>
                <TextBox Width="175" Name="TBoxName"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Password: " Width="175" TextAlignment="Center" FontSize="22"></TextBlock>
                <PasswordBox Width="175" Name="PBoxPassword"/>
            </StackPanel>
            <Button Content="Auth" Name="BtnAuth" HorizontalAlignment="Center" Click="BtnAuth_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
